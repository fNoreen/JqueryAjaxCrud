<script>
   

    $(document).on('click', '.add', function () {
        //console.log("clicked");
        var Id = $('#CountryId').val();
        var CountryName = $('#CountryName').val();
        var cntry = {
            'CountryId': Id,
            'CountryName': CountryName,
        }
        $(document)
        //var detailData = JSON.stringify(ccity);
        $.ajax({
            type: "POST",
            url: "/Country/AddUpdateCountry/",
            data: { 'cntry': cntry },
            dataType: 'json',
            success: function (response) {
                if (response.msg) {
                    location.reload();
                }
                else {
                    alert(response.msg);
                }
            }
        })

    })
</script>

